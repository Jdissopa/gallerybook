<%= form_for [@commentable, @comment] do |f| %>
	<% if @comment.errors.any? %>
		<h2>Please correct the followng errors.</h2>
		<ul>
			<% @comment.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<div class="field">
		<%= f.text_area :content, rows: 8 %>
	</div>
	
	<div class="actions">
		<%= f.hidden_field :user_id %>
		<%= f.submit %>
	</div>

<% end %>